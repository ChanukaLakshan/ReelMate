<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ReelMate">
        <!-- LoginActivity is the new launcher (starting) activity -->
        <activity
            android:name=".activities.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Keep MainActivity declared but not as launcher -->
        <activity
            android:name=".MainActivity"
            android:exported="true" />

        <!-- Signup Activity -->
        <activity
            android:name=".activities.SignupActivity"
            android:exported="true" />

        <!-- Other app activities -->
        <activity
            android:name=".activities.WatchlistActivity"
            android:exported="true" />

        <activity
            android:name=".activities.ReviewActivity"
            android:exported="true" />
    </application>

</manifest>